<%= form_with(model: playlist, local: true) do |form| %>
  <% if playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
        <% playlist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'Hold Time (sec)' %>
    <%= form.number_field :hold_time, class: 'form-control' %>
  </div>

  <table class="table table-playlist_poses">
    <thead>
      <tr>
        <th>Sequence Number</th>
        <th>Pose</th>
        <th>Delete?</th>
      </tr>
    </thead>
    <tbody>
      <%= form.fields_for :playlist_poses do |f_playlist_pose| %>
      <tr> <%= render 'playlist_poses/form_fields', f_playlist_pose: f_playlist_pose %> </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= form.submit class: 'btn btn-sm btn-primary'%>
  </div>
<% end %>
